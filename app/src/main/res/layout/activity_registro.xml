<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:foregroundTint="#FFFFFF"
    tools:context=".RegistroActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"

        android:layout_marginRight="20dp"
        android:background="#B8C3FD"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.561">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre" />

        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Escribe tu nombre"
            android:inputType="textPersonName"
            android:backgroundTint="@color/edit_text_buttom_line"
            android:textCursorDrawable="@null"/>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:text="Apellidos" />

        <EditText
            android:id="@+id/txtApellido"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Escribe tu apellido"
            android:inputType="textPersonName"
            android:backgroundTint="@color/edit_text_buttom_line"
            android:textCursorDrawable="@null"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:text="Domicilio" />

        <EditText
            android:id="@+id/txtDomicilio"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Escribe tu domicilio"
            android:inputType="textPersonName"
            android:backgroundTint="@color/edit_text_buttom_line"
            android:textCursorDrawable="@null"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:text="Telefono" />

        <EditText
            android:id="@+id/txtTelefono"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Escribe tu telefono"
            android:inputType="phone"
            android:backgroundTint="@color/edit_text_buttom_line"
            android:textCursorDrawable="@null"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:text="E-mail" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Escribe tu email"
            android:inputType="textPersonName"
            android:backgroundTint="@color/edit_text_buttom_line"
            android:textCursorDrawable="@null"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:text="Password"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Escribe un password"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="@color/edit_text_buttom_line"
            android:textCursorDrawable="@null"/>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:backgroundTint="@color/blue_button"
            android:text="Registrarme"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:onClick="mostrarPantallaPrincipal"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>