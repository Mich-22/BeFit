<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:textAlignment="center"
    tools:context=".TarjetaActivity">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="412dp"
        android:layout_height="50dp"
        android:background="#B0DD7A"
        android:text="Papayl"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button3"
        android:layout_width="410dp"
        android:layout_height="38dp"
        android:background="#25A4FA"
        android:text="Ingresa una nueva tarjeta"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="55dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextNumberPassword"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="numberPassword"
        android:text="Papayl"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="343dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="date"
        android:text="Fecha de expiracion:"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="283dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="number"
        android:text="Ingresa el numero de tarjeta:"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="159dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre y apellido:"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="215dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button5"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:background="#FF4747"
        android:text="Continuar comprando"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="422dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button9"
        android:layout_width="37dp"
        android:layout_height="31dp"
        android:background="@drawable/ic_flecha_atras"
        android:backgroundTint="#FFFFFF"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="12dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>