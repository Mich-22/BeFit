<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:foregroundTint="#FFFFFF"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0"
    tools:context=".FragmentSliderShowActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="379dp"
        android:layout_height="490dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre" />

        <EditText
            android:id="@+id/txtNombre_upd"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/edit_text_buttom_line"
            android:ems="10"
            android:hint="Escribe tu nombre"
            android:inputType="textPersonName"
            android:textCursorDrawable="@null" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:text="Apellidos" />

        <EditText
            android:id="@+id/txtApellido_upd"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/edit_text_buttom_line"
            android:ems="10"
            android:hint="Escribe tu apellido"
            android:inputType="textPersonName"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:text="Telefono" />

        <EditText
            android:id="@+id/txtTelefono_upd"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/edit_text_buttom_line"
            android:ems="10"
            android:hint="Escribe tu telefono"
            android:inputType="phone"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:text="E-mail" />

        <EditText
            android:id="@+id/txtEmail_upd"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/edit_text_buttom_line"
            android:ems="10"
            android:enabled="false"
            android:hint="Escribe tu email"
            android:inputType="textPersonName"
            android:textCursorDrawable="@null" />

        <Button
            android:id="@+id/buttonUpd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/blue_button"
            android:onClick="mostrarPerfil"
            android:text="Actualizar datos"
            android:textAlignment="center"
            android:textColor="@color/white" />

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
